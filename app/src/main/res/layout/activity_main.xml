<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.kamkeyboard.activity.MainActivity">

    <com.example.kamkeyboard.custom.KamEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="10dp"
        android:text="1236"/>

    <com.example.kamkeyboard.custom.MyKeyBoardView
        android:id="@+id/keyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:initNumKeyboard="true"
        app:isAbcKeyboardShow="true"
        app:isCharKeyboardShow="true"
        app:isNumKeyboardShow="true"
        app:isSystemKeyboardShow="true"/>
    <!--initNumKeyboard:show numKeyboard in the begining-->
</LinearLayout>
